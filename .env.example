# Secret Toulouse Spots Environment Configuration

# Environment (development, production, testing)
SPOTS_ENV=development

# Database
SPOTS_DB_PATH=hidden_spots.db

# Logging
SPOTS_LOG_LEVEL=INFO
SPOTS_LOG_DIR=logs

# Debug mode
SPOTS_DEBUG=false

# Testing mode
SPOTS_TESTING=false

# Scraper settings
SPOTS_MAX_CONCURRENT=5
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Rate limiting (seconds)
MIN_DELAY=2.0
MAX_DELAY=5.0

# Reddit API credentials (optional - for PRAW)
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=ToulouseSpots/1.0

# Instagram credentials (optional)
INSTAGRAM_USERNAME=your_username_here
INSTAGRAM_PASSWORD=your_password_here

# Selenium settings
HEADLESS_MODE=true
WEBDRIVER_PATH=/usr/bin/chromedriver

# Map settings
SPOTS_MAP_CENTER_LAT=43.6047
SPOTS_MAP_CENTER_LON=1.4442
SPOTS_MAP_DEFAULT_ZOOM=11
